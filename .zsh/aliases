# Functions

function cycle() {
    v destroy -f $1 && v up $1
}

function ports() {
    FAMILY=TCP
    STATE="-sTCP:LISTEN"
    if [[ -n $1 ]]; then
        FAMILY=$1
        STATE=
    fi
    sudo lsof -i${FAMILY} -P $STATE | tr -s " " "\t" | cut -f 1,5,8- | tail -n +2 | sort | uniq
}

alias proxy='squid -f ~/etc/squid.conf && echo "Squid started."'

function json() {
    CMD="curl -s \"$1\" | python -m json.tool"
    if which pygmentize > /dev/null; then
        eval "$CMD | pygmentize -l javascript"
    else
        eval $CMD
        echo "You didn't have pygmentize installed, so no colors for you!"
    fi
}
