case $( uname -s ) in
    Darwin )
        export PLATFORM="mac" ;;
    Linux )
        if [[ -f /etc/os-release ]]; then
            source /etc/os-release
            # Typically 'arch', 'ubuntu', etc
            export PLATFORM=$ID
        else
            # Fallback, though most of my kit (in dotfiles and hemera) will be
            # looking for the above specific distro values...
            export PLATFORM="linux"
        fi
        ;;
esac
